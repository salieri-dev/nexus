{
  "name": "GreentextSchema",
  "strict": true,
  "schema": {
    "type": "object",
    "properties": {
      "story": {
        "type": "string",
        "description": "The greentext story that is funny or sad in the style of typical 4chan user on /b/ board"
      },
      "4ch_comments": {
        "type": "array",
        "description": "Comments in 4ch style on /b/ board",
        "items": {
          "type": "string"
        },
        "minItems": 1,
        "maxItems": 3
      }
    },
    "required": [
      "story",
      "4ch_comments"
    ],
    "additionalProperties": false
  }
}